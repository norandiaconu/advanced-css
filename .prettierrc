{
	"overrides": [
		{
			"files": ".prettierrc",
			"options": {
				"parser": "json",
				"useTabs": true,
				"trailingComma": "none"
			}
		},
		{
			"files": "*.md",
			"options": {
				"parser": "markdown",
				"tabWidth": 2,
				"proseWrap": "preserve"
			}
		},
		{
			"files": "*.js",
			"options": {
				"parser": "babel",
				"printWidth": 120,
				"tabWidth": 4
			}
		},
		{
			"files": "*.json",
			"options": {
				"parser": "json",
				"useTabs": true,
				"trailingComma": "none"
			}
		},
		{
			"files": "*.scss",
			"options": {
				"parser": "scss",
				"printWidth": 120,
				"tabWidth": 4
			}
		},
		{
			"files": "*.html",
			"options": {
				"parser": "html",
				"printWidth": 120,
				"tabWidth": 4
			}
		}
	]
}
